<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.myportfolio.ui.home_screen.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/assetListFragment"
        android:name="com.example.myportfolio.ui.assets_screen.AssetListFragment"
        android:label="fragment_asset_list"
        tools:layout="@layout/fragment_asset_list" >
        <action
            android:id="@+id/action_assetListFragment_to_detailedAssetItemFragment"
            app:destination="@id/detailedAssetItemFragment" />
    </fragment>
    <fragment
        android:id="@+id/portfolioFragment"
        android:name="com.example.myportfolio.ui.portfolio_screen.PortfolioFragment"
        android:label="fragment_portfolio"
        tools:layout="@layout/fragment_portfolio" >
        <action
            android:id="@+id/action_portfolioFragment_to_DetailedPortfolioFragment"
            app:destination="@id/DetailedPortfolioFragment" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.myportfolio.ui.settings_screen.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/detailedAssetItemFragment"
        android:name="com.example.myportfolio.ui.assets_screen.DetailedAssetItemFragment"
        android:label="fragment_detailed_asset_item"
        tools:layout="@layout/fragment_detailed_asset_item" >
        <argument
            android:name="assetId"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/DetailedPortfolioFragment"
        android:name="com.example.myportfolio.ui.portfolio_screen.DetailedPortfolioFragment"
        android:label="Existing Fragment"
        tools:layout="@layout/fragment_detailed_portfolio" />
</navigation>
